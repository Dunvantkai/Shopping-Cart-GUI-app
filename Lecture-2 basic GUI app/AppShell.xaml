<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Lecture_2_basic_GUI_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Lecture_2_basic_GUI_app"
    xmlns:Pages="clr-namespace:Lecture_2_basic_GUI_app.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Lecture_2_basic_GUI_app">

    <TabBar>
        <Tab Title="Number-Tab" Icon="codepen.png">
            <ShellContent ContentTemplate="{DataTemplate Pages:NumberPage}"/>
        </Tab>
        <Tab Title="Shopping-Tab" Icon="bag.png">
            <ShellContent ContentTemplate="{DataTemplate Pages:ShoppingPage}"/>
        </Tab>
    </TabBar>
     
</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lecture_2_basic_GUI_app.Pages.NumberPage"
             Title="">
    <VerticalStackLayout Margin="0,50" MaximumWidthRequest="400" Spacing="30"> <!--0 left and right, 50 top and bottom -->
        <Label 
            Text="Square number Checker" FontSize="20" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid ColumnDefinitions="2*,*" ColumnSpacing="10">
            <Entry x:Name="NumberEntry" Placeholder="Enter a whole number"/>
            <Button Grid.Column="1" Text="Okay" Clicked="NumberEnrtyBtn_click"/>
        </Grid>
        <Label x:Name="ResultLabel" Text="Result:"/>
    </VerticalStackLayout>
</ContentPage>